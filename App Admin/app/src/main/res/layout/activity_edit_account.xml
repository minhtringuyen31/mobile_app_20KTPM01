<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.product.EditProduct">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/accountEditImage"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="140dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:background="@drawable/custom_edittext"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/accountEditDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accountEditImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-50dp"
            android:text="01/01/2000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/accountEditEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accountEditImage"
            android:layout_marginStart="-50dp"
            android:text="traichuoi@gmail.com" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/editProductScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/flexEditProduct"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"/>




    </ScrollView>

    <LinearLayout
        android:id="@+id/flexEditProduct"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="70dp"
            android:backgroundTint="#2196F3"
            android:text="Edit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="#E91E63"
            android:text="Delete" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/custom_rounded_search"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/orderProductName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:gravity="clip_vertical"
        android:maxLines="1"
        android:text="Cà phê thường"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productNote"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/orderProductName"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:gravity="fill_vertical"
        android:maxLines="2"
        android:text="Ngọt, nhiều sữa"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/productTopping"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/orderProductName"
        android:layout_marginStart="20dp"
        android:gravity="bottom"
        android:maxLines="2"
        android:text="Thạch cà phê"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/orderProductName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="100.000VND"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/productQuantity"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:text="x2"
        android:textColor="@color/black" />

</RelativeLayout>
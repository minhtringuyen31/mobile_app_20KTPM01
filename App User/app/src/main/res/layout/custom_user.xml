<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:layout_margin="10dp"
    android:background="@drawable/custom_rounded_search"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginBottom="10dp">

        <androidx.cardview.widget.CardView

            android:id="@+id/imageview1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/accountImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/accountName"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/imageview1"
            android:ellipsize="end"
            android:gravity="fill_vertical"
            android:maxLines="1"
            android:text="Brijesh"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/accountPhone"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/accountName"
            android:gravity="center"
            android:text="4546546457"
            android:textAlignment="viewEnd"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/accountEmail"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/accountName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageview1"
            android:ellipsize="end"
            android:gravity="fill_vertical"
            android:maxLines="1"
            android:text="How are you"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/accountDob"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/accountEmail"
            android:gravity="center"
            android:text="01/01/2000"
            android:textAlignment="viewEnd"
            android:textSize="12sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/isDisableAccount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

</RelativeLayout>
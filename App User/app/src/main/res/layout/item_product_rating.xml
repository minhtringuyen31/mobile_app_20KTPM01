<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ratingUserImageIV"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/ratingUserNameTV"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/gilroy_bold"
            android:text="User Name"
            android:textColor="@color/brownHighland"
            android:textSize="@dimen/_11ssp" />
        <RatingBar
            android:id="@+id/ratingStarRB"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3.5"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ratingDescriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_33sdp"
        android:fontFamily="@font/gilroy_light"
        android:text="Sản phẩm tốt"
        android:textColor="@color/brownHighland"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>


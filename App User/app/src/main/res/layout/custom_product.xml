<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/custom_rounded_search"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView

        android:id="@+id/imageview1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imageview1"
        android:ellipsize="end"
        android:gravity="clip_vertical"
        android:maxLines="1"
        android:text="Cà phê thường"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/productSales"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/productName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imageview1"
        android:gravity="center"
        android:text="Sales: 10"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/productStatus"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/productName"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/productSales"
        android:gravity="center"
        android:text="Còn hàng"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/isDisableProduct"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp" />
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fillViewport="true"
    tools:context=".pages.activities.order.Checkout">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_checkout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back_checkout"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:foregroundGravity="center"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back Cart">
                </ImageView>
                <TextView

                    android:text="Thanh toán"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/cancelCheckout"
                        android:layout_width="fill_parent"
                        android:text="Huỷ"
                        android:gravity="right"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:layout_height="wrap_content">

                    </TextView>
                </RelativeLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_border_checkout"

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/setupTime"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_alarm_24"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:id="@+id/timeShip"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:text="Hôm nay | Trong 15 phút "
                        android:textColor="@color/black"
                        android:textStyle="bold">
                    </TextView>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="0dp">

                    </View>
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_height="wrap_content">
                    </ImageView>
            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_phone_24"
                        android:layout_height="wrap_content">

                    </ImageView>
                    <TextView
                        android:id="@+id/phoneUser"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:text="Số điện thoại"
                        android:textColor="@color/black"
                        android:textStyle="bold">
                    </TextView>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="0dp">

                    </View>
                    <TextView
                        android:id="@+id/updatePhone"
                        android:layout_weight="0"
                        android:text="Cập nhật"
                        android:textColor="@color/darkGray"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_Address"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    tools:ignore="InvalidId">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_add_home_24"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:id="@+id/toggleAddress"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ">
                    </TextView>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="0dp">
                    </View>
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/showAddress"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

                <View
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:background="@color/black"
                />

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/baseline_note_add_24"
                    android:layout_height="wrap_content">
                </ImageView>

                <EditText
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/darkGray"
                    android:hint="Ghi chú cho đơn hàng"
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_height="wrap_content">

                </EditText>
            </LinearLayout>
            <View
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_border_checkout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Sản phẩm"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="0dp">
                </View>
                <TextView
                    android:id="@+id/addItems"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm sản phẩm" />




            </LinearLayout>

            <View
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"
                />


        </LinearLayout>

        <ListView
            android:id="@+id/listItemCheckout"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:layout_height="100dp" />
        <LinearLayout
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_border_checkout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="5dp"

                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tạm tính"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="0dp">

                </View>
                <TextView
                    android:id="@+id/subTotalCheckout"
                    android:layout_weight="1"
                    android:background="@drawable/custom_border_btn"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35,000 đ" />




            </LinearLayout>

            <View
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"
                />

            <LinearLayout
                android:padding="5dp"
                android:id="@+id/addDiscount"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Khuyến mãi"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="0dp">

                </View>
                <TextView
                    android:id="@+id/getandShowPercent"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm khuyến mãi" />
            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_border_checkout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tổng cộng"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="0dp">

                </View>
                <TextView
                    android:id="@+id/totalCheckout"
                    android:layout_weight="1"

                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35,000 đ" />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>

        <!-- Target view below -->

        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingHorizontal="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/baseline_payment_24"
                    android:layout_height="match_parent">
                </ImageView>
                <TextView
                    android:id="@+id/method_payment"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:paddingEnd="5dp"
                    android:id="@+id/methodSelected"
                    android:textColor="@color/darkGray"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:textSize="10dp"
                    android:layout_width="0dp"
                    android:text="Kênh thanh toán"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/btnPlaceOrderCheckout"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:text="Thanh toán"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/custom_border_btn"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </LinearLayout>








</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/orderImage"
                android:src="@drawable/success"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:background="@color/white"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/orderIdTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12ABC456"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/brownHighland"
                android:maxEms="10"
                android:maxLines="2"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/orderAddressShippingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/gilroy_light"

                android:maxLines="2"
                android:text="224 Nguyễn Văn Cừ, phường 4, quận 5, TP Hồ Chí Minh"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_8ssp" />
            <TextView
                android:id="@+id/orderStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/gilroy_light"
                android:textStyle="bold"
                android:maxLines="2"
                android:text="Món đang được giao"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_8ssp" />
            <TextView
                android:id="@+id/orderDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/gilroy_light"

                android:maxLines="2"
                android:text="20 thg 4 2023 04:11CH"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_8ssp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderPriceTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="45,000 VNĐ"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/brownHighland"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"/>

            <Button
                android:id="@+id/orderDetailBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/bg_category"
                android:text="CHI TIẾT"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>